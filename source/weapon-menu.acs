function void WM_ShowLaserSight(void)
{
  int angle = GetActorAngle(0);
  int pitch = GetActorPitch(0);
  int distanceCheckTid = UniqueTID();
  int maxDistance = 4096.0;
  LineAttack(0, angle, pitch, 0, "WM_InvisiblePuff", "None", maxDistance,
             FHF_NORANDOMPUFFZ | FHF_NOIMPACTDECAL, distanceCheckTid);
  int distanceX = GetActorX(distanceCheckTid);
  int distanceY = GetActorY(distanceCheckTid);
  int myX = GetActorX(0);
  int myY = GetActorY(0);
  int distanceXDelta = (distanceX - myX) >> 22;
  int distanceYDelta = (distanceY - myY) >> 22;
  int distance = distanceXDelta * distanceXDelta +
    distanceYDelta * distanceYDelta;

  int iPuff = 0;
  if      (distance <  18) { iPuff = 1; }
  else if (distance < 100) { iPuff = 2; }
  else if (distance < 300) { iPuff = 3; }
  else if (distance < 900) { iPuff = 4; }
  else                     { iPuff = 5; }

  if (zoomFactor >= 1.8) { --iPuff; }

  str puff = puffs[iPuff];

  /*
  Log(i:distance);
  Log(s:puff);
  ///*///

  LineAttack(0, angle, pitch, 0, puff, "None", maxDistance,
             FHF_NORANDOMPUFFZ | FHF_NOIMPACTDECAL);
}

