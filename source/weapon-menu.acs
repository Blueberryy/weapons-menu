script "WM_ToggleZoom" (void)
{
  WM_ToggleZoom();
}

function void WM_ToggleZoom(void)
{
  if (WM_IsMelee()) { return; }
  if (!WM_IsWeaponReady(WM_GetWeaponName(selectedWeapon))) { return; }

  int  playerN = PlayerNumber();
  bool isLaserConnected = GetUserCVar(playerN, "m8f_wm_LaserOnZoom");

  bool isZoomed = WM_IsZoomed();
  if (isZoomed) { zoomFactor = 1.0; }
  else          { zoomFactor = GetUserCVar(playerN, "m8f_wm_ZoomFactor"); }

  ScriptCall("WMZScriptHelper", "SetZoomFactor", zoomFactor);

  if (isLaserConnected)
  {
    SetUserCVar(playerN, "m8f_wm_ShowLaserSight", WM_IsZoomed());
  }
}

function bool WM_IsZoomed(void)
{
  return zoomFactor != 1.0;
}
