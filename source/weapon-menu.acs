    if (selectedWeapon == WEAPON_HOLSTERED) { start = weaponCount    - 1; }
    else                                    { start = selectedWeapon - 1; }

    for (n = 0; n < weaponCount; ++n)
    {
      i = (start - n + weaponCount) % weaponCount;
      if (SetWeapon(WM_GetWeaponName(i)) && !WM_SkipNoAmmo(i)) { break; }
    }

    if (n != weaponCount - 1)
    {
