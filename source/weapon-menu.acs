int  weaponCount;
int  step;
bool isDoom1;
bool isDoom2;

int  highlightedWeapon;
int  selectedWeapon;
str  lastUsedWeapon;

bool selectedWatchEnabled = true;

bool isInInventory[MAX_WEAPONS_NUMBER];

int zoomFactor = 1.0;
bool isZoomed;

int originalFov;

