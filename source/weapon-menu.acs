//
// (UNINITIALIZED) -titlemap-> [TERMINATED]
// (UNINITIALIZED) -unknown-class-> [DISABLED]
// (UNINITIALIZED) -known-class-and-always-open-> OPENED
// (UNINITIALIZED) -known-class-> CLOSED
//
